    // --- Backup is running ---
    if (running) {
      if (!backupStartTime) {
        backupStartTime = Date.now();
      }

      btn.text('Backup Now');
      status.show();

      return;
    }

    // --- Backup is NOT running ---
    if (!backupStartTime) {
      // Never started or already reset
      btn.text('Backup Now');
      status.hide();
      return;
    }

    // Enforce minimum visible duration
    const elapsed = Date.now() - backupStartTime;

    if (elapsed < MIN_DURATION) {
      setTimeout(() => updateBackupUI(false), MIN_DURATION - elapsed);
      return;
    }

    // Reset state
    backupStartTime = 0;
    btn.text('Backup Now');
    status.hide();
