removepkg unraid-vm-backup-and-restore_beta
rm -rf /usr/local/emhttp/plugins/vm-backup-and-restore_beta
rm -rf /boot/config/plugins/vm-backup-and-restore_beta
]]>
</INLINE>
</FILE>

